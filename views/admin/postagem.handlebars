<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Título: {{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{formatDate data}}</small>
            <br>
            <small> Categoria: {{categoria.nome}}</small>
            <br>
            <a href="/admin/postagens/editar/{{_id}}"><button class="btn btn-success mt-3">Editar Postagem</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-3">Deletar Postagem</button></a>

        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada</p>

{{/each}}